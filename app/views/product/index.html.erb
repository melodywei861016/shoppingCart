<h2>The Pirate Shop</h2>

<ol>
  <% @products.each do |product| %>
    <li>
      <%= product.title %> ($<%= product.price %>)

      <%= form_tag order_items_path do %>
        <%= hidden_field_tag :product_id, product.id %>
        <%= number_field_tag :quantity, 1 %>
        <%= submit_tag "Add to Cart" %>
      <% end %>

    </li>

  <% end %>
</ol>
